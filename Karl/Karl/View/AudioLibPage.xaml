<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:b="clr-namespace:Prism.Behaviors;assembly=Prism.Forms"
             mc:Ignorable="d"
             x:Class="Karl.View.AudioLibPage"
			 x:Name="audiolibpage">
	
    <ContentPage.Content>

		<Grid RowSpacing="0" ColumnSpacing="0" Padding="0" BackgroundColor="White">
			
			<Grid.RowDefinitions>
				<RowDefinition Height="1.5*"/>
				<RowDefinition Height="0.75*"/>
				<RowDefinition Height="10*"/>
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="0.5*"/>
				<ColumnDefinition Width="8*"/>
				<ColumnDefinition Width="8*"/>
				<ColumnDefinition Width="4*"/>
				<ColumnDefinition Width="4*"/>
				<ColumnDefinition Width="0.5*"/>
			</Grid.ColumnDefinitions>

			<!--First Row-->
			<Frame Grid.Row="0" Grid.Column="0" Grid.RowSpan="3" CornerRadius="0"></Frame>
			<Frame Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" CornerRadius="0">
				<SearchBar x:Name="searchBar"
					Placeholder="{Binding TitleLabel}"
					VerticalOptions="Center"
					HorizontalOptions="Start"
					SearchCommand="{Binding SearchSongCommand}"
					SearchCommandParameter="{Binding Text, Source={x:Reference searchBar}}">
					<SearchBar.Behaviors>
						<b:EventToCommandBehavior EventName="TextChanged"
							Command="{Binding SearchSongCommand}"
							CommandParameter="{Binding Text, Source={x:Reference searchBar}}" />
					</SearchBar.Behaviors>
				</SearchBar>
			</Frame>
			<Frame Grid.Row="0" Grid.Column="3" Padding="10" CornerRadius="0">
				<ImageButton Source="add.png"
					Aspect="AspectFit"
					BackgroundColor="White"
					Command="{Binding AddSongCommand}"/>
			</Frame>
			<Frame Grid.Row="0" Grid.Column="4" Padding="10" CornerRadius="0">
				<ImageButton Source="delete.png"
					Aspect="AspectFit"
					BackgroundColor="White"
					Command="{Binding DeleteSongsCommand}"/>
			</Frame>
			<Frame Grid.Row="0" Grid.Column="5" Grid.RowSpan="3" CornerRadius="0"></Frame>
			
			<!--Second Row-->
			<Frame Grid.Row="1" Grid.Column="1" Padding="0" BorderColor="{Binding CurrentColor.Color}" CornerRadius="0">
				<Button Text="{Binding TitleLabel}"
					TextColor="{Binding TitleSortTextColor}"
					Command="{Binding TitleSortCommand}"
					BackgroundColor="{Binding TitleSortColor}"/>
			</Frame>
			<Frame Grid.Row="1" Grid.Column="2" Padding="0" BorderColor="{Binding CurrentColor.Color}" CornerRadius="0">
				<Button Text="{Binding ArtistLabel}"
					Command="{Binding ArtistSortCommand}"
					TextColor="{Binding ArtistSortTextColor}"
					BackgroundColor="{Binding ArtistSortColor}"/>
			</Frame>
			<Frame Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="2" Padding="0" BorderColor="{Binding CurrentColor.Color}" CornerRadius="0">
				<Button Text="{Binding BPMLabel}"
					BackgroundColor="{Binding BPMSortColor}"
					TextColor="{Binding BPMSortTextColor}"
					Command="{Binding BPMSortCommand}"/>
			</Frame>

			<!--Third Row-->
			<Frame Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="6" CornerRadius="0">
				<ListView x:Name="listView"
					HasUnevenRows="True"
					ItemsSource="{Binding Songs}">
					<ListView.ItemTemplate>
						<DataTemplate>
							<ViewCell>
								<Frame CornerRadius="0">
									<StackLayout Orientation="Horizontal">
										<StackLayout Orientation="Vertical" VerticalOptions="Center">
											<Label Text="{Binding Title}" VerticalOptions="Center"/>
											<Label Text="{Binding Artist}" VerticalOptions="Center"/>
											<Label Text="{Binding BPM}" VerticalOptions="Center"/>
										</StackLayout>
										<CheckBox Color="{Binding CurrentColor.Color, Source={x:Reference audiolibpage}}"
											HorizontalOptions="EndAndExpand">
											<CheckBox.Behaviors>
												<b:EventToCommandBehavior EventName="CheckedChanged"
												Command="{Binding BindingContext.EditDeleteListCommand, Source={x:Reference audiolibpage}}"
												CommandParameter="{Binding .}"/>
											</CheckBox.Behaviors>
										</CheckBox>
									</StackLayout>
								</Frame>
							</ViewCell>
						</DataTemplate>
					</ListView.ItemTemplate>
					<ListView.Behaviors>
						<b:EventToCommandBehavior EventName="ItemTapped"
							Command="{Binding PlaySongCommand}"
							CommandParameter="{Binding SelectedItem, Source={x:Reference listView}}"/>
					</ListView.Behaviors>
				</ListView>
			</Frame>

		</Grid>

    </ContentPage.Content>
</ContentPage>
